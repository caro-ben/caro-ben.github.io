// main: styles.styl

body
  font-family 'Lato', sans-serif

.second-container
  background-color #fff
  color #555
  padding-top 30px
  padding-bottom 30px

.second-container a
  color #fff

.second-container a:hover,
.second-container a:focus
  color #e6e6e6


ul.countdown
  list-style none
  margin 50px 0
  padding 0
  display block
  text-align center
  color #555
  font-weight 100


ul.countdown li
  display inline-block

ul.countdown li span
  font-size 80px
  font-weight 300
  line-height 80px

  @media (max-width 767px)
    font-size 40px
    line-height 50px


ul.countdown li.seperator
  font-size 80px
  line-height 70px
  vertical-align top

  @media (max-width 767px)
    font-size 40px
    line-height 50px

  .seconds_text, .days_text, .hours_text, .minutes_text
    font-size 20px !important

ul.countdown li p
  font-size 25px

.page-heading
  font-weight 400
  text-shadow 0 2px 5px rgba(0, 0, 0, 0.5)
  color #fff
  margin-bottom 0
  font-size 50px !important
  line-height 60px !important

.second-container
  padding 100px 0
  .page-heading
    color #555
    text-shadow 0 2px 5px rgba(255, 255, 255, 0.5)

.first-container
  background url(../../assets/images/bgc.png) no-repeat center
  background-size cover
  padding 200px 0
  .lead, .muted
    color #fff
    text-shadow 0 2px 5px rgba(0, 0, 0, 0.5)

  @media (max-width 767px)
    background url(../../assets/images/bgc.png) no-repeat 20% 50%

.fifth-container
  background url(../../assets/images/bgc2.png) 50% 50% no-repeat
  padding 150px 0
  .lead, .muted
    color #fff
    text-shadow 0 2px 5px rgba(0, 0, 0, 0.5)

.hero
  background url(../../assets/images/Group3.jpg) no-repeat center
  background-size cover
  padding-top 250px
  padding-bottom 250px

  @media only screen and (min-width 1600px)
    padding-top 400px
